<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/retailer_productIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_splash"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@id/retailer_productIconIv">

            <TextView
                android:id="@+id/retailertitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/retailer_quantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/retailer_priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 30"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:id="@+id/stock_detailsRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/retailer_stockTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="In Stock"
                    android:textColor="@color/purple_200"/>

                <TextView
                    android:id="@+id/retailer_availableTv"
                    android:layout_toEndOf="@id/retailer_stockTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Available Now)"
                    android:textColor="@color/black"/>



            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/nextIv"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_next" />

        <TextView
            android:id="@+id/addToCartTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
            android:gravity="center_vertical"
            android:layout_toStartOf="@+id/nextIv"
            android:textColor="@color/black"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>